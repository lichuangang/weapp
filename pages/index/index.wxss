/**tab样式**/

.swiper-tab {
  width: 100%;
  border-bottom: 1rpx solid #00a5e0;
  text-align: center;
  line-height: 80rpx;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 33.33%;
  color: #777;
}

.on {
  color: #00a5e0;
  border-bottom: 5rpx solid #00a5e0;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.swiper-box view {
  text-align: center;
}

/**内容样式**/

.recommend_scroll_x_box {
  width: 100%;
  display: flex;
  /*必需有高度才能滚动*/
  height: 100%;
}

.recommend_hot_box {
  width: 100%;
  border-bottom: 1px solid #dedfe0;
  padding: 5px;
}

.recommend_hot_box_title {
  text-align: left;
  color: black;
  display: block;
  font-size: 16px;
  padding: 3px;
}

.recommend_hot_box_desc {
  text-align: left;
  color: gray;
  display: block;
  font-size: 13px;
  word-break: break-all;
  white-space: pre-wrap;
  padding: 5px;
}

.search .cm_txt {
  border-radius: 10px;
  text-align: center;
  background-color: whitesmoke;
  line-height: 24px;
  height: 24px;
  font-size: 14px;
  margin-top: 0px;
}

/*浮动小圆点*/
.floatAgree {
  float: right;
  z-index: 100;
  margin-top: 5px;
  margin-right: 15px;
  background-color: red;
  color: white;
  border-radius: 8px;
  line-height: 16px;
  padding-left: 5px;
  padding-right: 5px;
  font-size: 12px;
  height: 16px;
  text-align: center;
  overflow-x:auto;
}
