/* pages/info/info.wxss */
.content{
    padding:0px 10px;
    line-height: 1.6em;
    font-size: 14px;
    font-weight: "宋体";
    overflow: auto;
}

.options{
    margin-top: 10px;
}

.content .address{
    font-size: 12px;
    color: grey;
    margin-top: 5px;
}

.clear{
    height: 0px;
    display: block;    
}

.tLeft{
    width: 50%;
}

.tRight{
    width: 50%;
    text-align: right;
}

.options .btn{
    width: 45%;
    height: 32px;
    line-height: 28px;
    padding: 2px;
    font-size: 14px;
    border-radius: 3px;    
}

.ok{
    width: 160px;
    height: 50px;
    line-height: 50px;
    border-radius: 5px;
    font-size: 20px;
    margin: 15px auto;
    padding-left: 60px;
    background-image: url('http://www.beantu.cc/agree.png');
    background-repeat: no-repeat;
    background-size: 25% 85%;    
    background-position-x: 25px;
    background-position-y:2px;
}

.button-hover {
    font-weight: bolder;
    border-style: 1px solid #00a5e0;
}

.empt{
    height: 60px;
    display:block;
}

.commentGrid{
    margin-top: 10px; 
}

.commentGrid .commentInfo .cm_title{
    padding: 0px 5px;
}

.commentGrid .commentInfo .cm_time{
    text-align: right;
    font-size: 12px;
    color: grey;
    padding: 0px 5px;
}

.toolBar{
    height: 50px;
    line-height: 44px;
    position: fixed;
    bottom: 0rpx;
    opacity: 100;
    background-color: white;
    width: 100%;
    border-top:2px solid whitesmoke;     
}

.toolBar .cm_txt{
border-radius: 5px;  
background-color:whitesmoke;
line-height: 32px;
height: 32px;
font-size: 14px;
margin-left: 10px;
margin-top: 0px;
width: 70%;
}

.toolBar .comment{
    width: 15%;
}
